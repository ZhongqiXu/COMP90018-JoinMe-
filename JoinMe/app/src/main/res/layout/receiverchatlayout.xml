<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">


    <RelativeLayout
        android:id="@+id/layoutformessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="50dp"
        android:background="@drawable/receiverchatdrawable">

        <TextView
            android:id="@+id/sendermessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingRight="40dp"
            android:paddingBottom="7dp"
            android:text="Sender Message Display Here"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:layout_height="300dp"
            android:layout_width="300dp"
            android:id="@+id/senderpic"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingRight="40dp"
            android:paddingBottom="7dp"
            android:visibility="gone"
            android:src="@drawable/defaultprofile"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/timeofmessage"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-90dp"
        android:layout_toRightOf="@+id/layoutformessage"
        android:padding="7dp"
        android:text="20:09"
        android:textColor="#434343"
        android:layout_alignBottom="@+id/layoutformessage"
        android:textSize="10sp"/>

</RelativeLayout>